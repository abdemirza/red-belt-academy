<%- include('./partials/dashboardHeader.ejs') %>
<% month=["January","February","March","April","May","June","July","August","September","October","November","December"]%>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <% include('./partials/messages') %> 
      <% for(tournament of tournaments){ %>
        <% event_date=tournament.event_date.split('-'),last_date=tournament.last_entry.split('-') %> 
      <div class="col-md-6 grid-margin stretch-card">
        <div class="card">
          <div class="card-body">
            <h4 class="card-title text-center font-weight-bold" style="color: #5e35b1; font-size: 1.5em;"><%= tournament.name %></h4>
            <tbody>
              <tr>
                <td>
                  <div class="badge badge-pill badge-primary  mr-2">1</div>
                  <div class="d-inline display-5">Begins On :</div>
                  <div class="text-danger d-inline">
                    <%= month[parseInt(event_date[1])-1]+' '+event_date[2]+' '+', '+event_date[0]%>
                  </div>
                </td>
              </tr>
              <br><br>
              <tr>
                <td>
                  <div class="badge badge-pill badge-danger mr-2">2</div>
                  <div class="d-inline display-5">Last Entries :</div>
                  <div class="text-danger d-inline">
                    <%= month[parseInt(last_date[1])-1]+' '+last_date[2]+' '+', '+last_date[0]%>
                  </div>
                </td>
              </tr>
              <tr>
                  <br><br>
                <td>
                  <div class="badge badge-pill badge-warning mr-2">3</div>
                  <div class="d-inline display-5">Entry Fee :</div>
                  <i class="fas fa-rupee-sign text-danger"></i>
                  <div class="text-danger d-inline">
                    <%=tournament.entry_fee+'/-'%>
                  </div>
                </td>
              </tr>
              <br><br>
              <tr>
                <td>
                  <div class="badge badge-pill badge-success mr-2" >4</div>
                  <div class="d-inline display-5">Categories : </div>
                  <% for(key in tournament.categories){ %> 
                    <span class="text-danger">
                    <%= key %>
                  </span>
                <% } %> 
                </td>
              </tr>
              <br><br>
              <tr>
                  <td>
                      <div class="text-right">Contact for more details :</div>
                  </td>
              </tr>
              <tr>
                <td>
                <div class="text-primary text-right" >
                    <%= user.email %> 
                </div>
                </td>
              </tr>
              <br><br>
              <h1> </h1>
              <a href="/editTournament/<%= tournament._id %>" class="btn btn-danger btn-block <%=  new Date().toJSON().slice(0,10).replace(/-/g,'-') > tournament.last_entry ?'disabled' : '' %>">Edit Details</a>
              <a href="/judgeRequest/<%= tournament._id %>" class="btn btn-danger btn-block <%=  new Date().toJSON().slice(0,10).replace(/-/g,'-') > tournament.last_entry ?'disabled' : '' %>">See Judge Requests</a>
              <a href="/startTournament/<%= tournament._id %>" class="btn btn-danger btn-block <%=  new Date().toJSON().slice(0,10).replace(/-/g,'-') > tournament.last_entry ?'disabled' : '' %>">Start Tournament</a>
            </tbody>
          </div>
        </div>
      </div>

      <% } %>
    </div>
    <%- include('./partials/dashboardFooter.ejs') %>
  </div>
</div>
