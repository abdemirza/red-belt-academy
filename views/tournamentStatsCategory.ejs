<%- include('./partials/dashboardHeader.ejs') %>
<div class="main-panel">
  <div class="content-wrapper">
    <div class="row">
      <div class="col-12 grid-margin">
        <div class="card">
          <div class="card-body">
            <h3 class="display-4  text-uppercase font-weight-bold" style="color:#4db6ac;"><%= tournament.name%> </h4>
            <div class="row">
              <div class="col-md-12 text-center h-100">
                <div class="bg-secondary p-4 bg-dark">
                  <h6 class="card-title text-left"> Categories : </h6>
                  <div id="profile-list-left" class="py-2">
                    <% for(i of Object.keys(tournament.categories)){ %> 
                    <div class="card rounded mb-2">
                      <div class="card-body p-3">
                        <div class="media">
                          <div class="media-body">
                            <% if(i.substring(1)!='SENIOR'){ %> 
                            <a href='/tournamentStatus/<%= tournament._id %>/<%= i %>' class="mb-1 text-primary"><%= i[0]=='M'?'Male':'Female' %> Under <%=i.substring(2)%> </a>
                            <% }else{ %> 
                              <a href='/tournamentStatus/<%= tournament._id %>/<%= i %>' class="mb-1 text-primary"><%= i[0]=='M'?'Male ':'Female ' %>Senior </a>
                            <% } %> 
                          </div>
                        </div>
                      </div>
                    </div>
                <% } %> 
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>

      <%- include('./partials/dashboardFooter.ejs') %>
    </div>
  </div>
</div>
