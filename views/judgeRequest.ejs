<%- include('./partials/dashboardHeader.ejs') %>
<div class="main-panel">
  <div class="content-wrapper">
    
    <div class="row">
      <% for(judgeRecord of judgeRecords){ %>
      <div class="col-md-4 grid-margin grid-margin-md-0 stretch-card">
        <div class="card" style="background-color: #FAACA8;
        background-image: linear-gradient(19deg, #FAACA8 0%, #DDD6F3 100%); color:black;">
          <div class="card-body text-center">
            <div class="mb-4">
              <img
                src="../images/icons/judge.png"
                class="img-lg rounded-circle mb-2"
                alt="profile image"
              />
              <h4><%= judgeRecord.name %> </h4>
              <h4>Email : <%= judgeRecord.email %> </h4>
            </div>
            <% if(judgeRecord.isJudge[tournament_id]==0){ %> 
            <form action="/judgeApproved/<%=tournament_id%>/<%= judgeRecord._id %>" method="post">
            <button class="btn btn-danger btn-sm mt-0">Accept Request</button>
            </form>
        <% }else{ %> 
            <div class="badge-primary badge badge-pill" style="background-color: #d81b60;">Approved</div>
        <% } %> 
            <p class="mt-3 card-text font-weight-bold mb-4">
                Click on 'Accept Request' to make me a Judge.
                (Note : You cannot revert these changes.)
              
            </p>
           
            <div class="border-top pt-3">
                
            </div>
          </div>
        </div>
         
        </div>
        <% } %>
        <%- include('./partials/dashboardFooter.ejs') %>
      </div>
    </div>
  </div>
</div>
